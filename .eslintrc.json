{
    "env": {
        "browser": true,
        "es2021": true
    },
    
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/jsx-runtime"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react", 
        "@typescript-eslint"
    ],
    "rules": {
    },
      "settings": {
    "react": {
      "version": "detect" // Auto-detect the React version
        }
    },
    "ignorePatterns": [
    "node_modules/",
    "build/",
    "dist/",
    "tsconfig.json",
    "eslint.config.js",
    "setup.ts",
    "vite.config.ts",
    "vite-env.d.ts"
  ]

}
